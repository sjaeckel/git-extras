#!/bin/sh

if test $# -eq 0; then
  test -f .gitignore && cat .gitignore
else
  if test "$1" = "--apply"; then
    git ls-files --exclude-standard -i | xargs git rm --cached
  else
    for pattern in $@; do
      echo "... adding '$pattern' to .gitignore"
      echo $pattern >> .gitignore
    done
  fi
fi
